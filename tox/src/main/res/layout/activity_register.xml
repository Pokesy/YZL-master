<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/loginTop"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >


    <com.thinksky.ui.common.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

  </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginTop="30dp"
      android:orientation="vertical"
      >


    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/openRegist"
          android:layout_width="match_parent"
          android:layout_height="38dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          android:background="@drawable/button_edit_normal"
          android:drawablePadding="10dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:paddingLeft="10dp"
          android:text="邀请注册用户请先输入邀请码，再填写注册信息"
          android:visibility="gone"
          tools:visibility="visible"
          />

      <EditText
          android:id="@+id/redit_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/shape"
          android:gravity="center_vertical"
          android:hint="手机号"
          android:inputType="number"
          android:maxLength="11"
          android:padding="10dp"
          android:textColorHint="@android:color/white"
          style="@style/Widget.App.TextView.Medium.White"
          />


      <EditText
          android:id="@+id/redit_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:background="@drawable/shape"
          android:hint="@string/register_input_password_hint"
          android:inputType="textPassword"
          android:maxLength="12"
          android:padding="10dp"
          android:textColorHighlight="@color/font_color_light_gray"
          android:textColorHint="@android:color/white"
          style="@style/Widget.App.TextView.Medium.White"
          />


      <EditText
          android:id="@+id/reset_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:background="@drawable/shape"
          android:hint="@string/register_input_password_again_hint"
          android:inputType="textPassword"
          android:maxLength="12"
          android:padding="10dp"
          android:textColorHint="@android:color/white"
          style="@style/Widget.App.TextView.Medium.White"
          />


      <EditText
          android:id="@+id/nickname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:background="@drawable/shape"
          android:hint="@string/register_input_nickname_hint"
          android:maxLength="16"
          android:padding="10dp"
          android:textColorHint="@android:color/white"
          style="@style/Widget.App.TextView.Medium.White"
          />


      <EditText
          android:id="@+id/role"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          android:background="@drawable/button_edit_normal"
          android:drawableLeft="@drawable/user"
          android:drawablePadding="10dp"
          android:enabled="false"
          android:maxLength="16"
          android:paddingLeft="10dp"
          android:visibility="gone"
          />

      <LinearLayout
          android:id="@+id/checkId"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <EditText
            android:id="@+id/verifyId"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/shape"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@android:color/white"
            style="@style/Widget.App.TextView.Medium.White"
            />

        <TextView
            android:id="@+id/sendVerify"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            style="@style/Widget.App.TextView.Medium"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          ></LinearLayout>

      <RadioGroup
          android:id="@+id/radioGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="性别"
          android:orientation="horizontal"
          >

      </RadioGroup>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          ></LinearLayout>

      <RelativeLayout
          android:id="@+id/next"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:background="@drawable/shape_login"
          android:padding="@dimen/margin_medium"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="下一步"
            style="@style/Widget.App.TextView.Large.White"
            />
      </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          android:paddingTop="10dp"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击下一步代表您已阅读并同意"
            android:textColor="#ffffff"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户使用协议"
            android:textColor="#87CEEB"
            android:textSize="14sp"
            />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:paddingBottom="5dp"
      android:paddingTop="15dp"
      android:visibility="gone"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爪机注册无需注册码"
        android:textColor="#696969"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:visibility="gone"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每只爪机仅能注册一个帐号，请呵护对待"
        android:textColor="#696969"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="180dp"
      android:gravity="center_horizontal"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有帐号,这就"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/startlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#87CEEB"
        android:textSize="16sp"
        />
  </LinearLayout>

</LinearLayout>