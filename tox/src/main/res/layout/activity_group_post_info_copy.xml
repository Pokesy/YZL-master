<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--页头-->
    <RelativeLayout
        android:id="@+id/group_post_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_border"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/back_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/arrow_left" />


        <ImageView
            android:id="@+id/cate_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/menu"
            android:visibility="gone" />
    </RelativeLayout>

    <!--body-->
    <ScrollView
        android:id="@+id/post_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/group_post_top">

        <LinearLayout
            android:id="@+id/body_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--帖子信息区-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.thinksky.redefine.CircleImageView
                            android:id="@+id/group_logo"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/side_user_avatar" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="发帖人"
                            android:textColor="#815F3D"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/louzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/group_name"
                            android:background="@drawable/text_blue_round"
                            android:text="楼主"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/join"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="6dp"


                            android:text="楼主" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/group_name"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/post_create_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"

                                android:layout_marginLeft="5dp"
                                android:text="2015-02-04"
                                android:textColor="#0C0C0C"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/louzhu"

                                android:layout_marginLeft="5dp"
                                android:text="发布" />

                            <TextView
                                android:id="@+id/group_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/louzhu"
                                android:layout_marginLeft="5dp"
                                android:text="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/louzhu"

                                android:layout_marginLeft="5dp"
                                android:text="个成员" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:text="帖子标题"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="作者："
                            android:textColor="#999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="楼主"
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/post_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:text="这里是帖子内容，看看一看内容超越第二排是什么情况啊，再看一遍"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                    <!--状态部分-->
                    <RelativeLayout
                        android:id="@+id/img_layout"
                        android:layout_width="match_parent"
                        android:layout_height="170dp">
                        <!--图片部分-->
                        <LinearLayout
                            android:id="@+id/images"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/iv_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/iv_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.thinksky.redefine.CircleImageView
                                android:id="@+id/user_logo"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/side_user_avatar" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/louzhu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:text="作者："
                                android:textColor="#999999"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/post_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center"
                                android:layout_toEndOf="@+id/louzhu1"
                                android:layout_toRightOf="@+id/louzhu1"
                                android:text="楼主"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/qianming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@+id/post_user_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:singleLine="true"
                                android:text="个性签名aaaaaaaaaaaaaaaaaaa"
                                android:textColor="#0C0C0C"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/chengyuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"

                            android:text="作者："
                            android:textColor="#999999"
                            android:textSize="13sp" />

                        <com.thinksky.rsen.view.RRecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:tag="HORIZONTAL" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/one_line" />
            <!--评论主体-->
            <LinearLayout
                android:id="@+id/post_body_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!--加载数据按钮-->
            <LinearLayout
                android:id="@+id/loading_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/load_more_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="点击加载更多"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/load_more_pro"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone" />
                </LinearLayout>

                <include layout="@layout/one_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--评论发表box-->
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/reply_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F6FAFB"
            android:gravity="center"
            android:visibility="visible"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/support_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="6dp"
                android:layout_weight="4.5"
                android:background="@drawable/border"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/forum_like" />

                <TextView
                    android:id="@+id/supportCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:textColor="#787C7F" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="4.5"
                android:background="@drawable/border"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/forum_com" />

                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:textColor="#787C7F" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_box"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/forum_edit_backgroud"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.1"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/plus" />
            </LinearLayout>

            <EditText
                android:id="@+id/reply_editText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:background="@drawable/edittext_background"
                android:hint="回复楼主" />

            <TextView
                android:id="@+id/sendPostButn"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="发表"
                android:textColor="#A9ADB0" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="119dp"
        android:padding="10dp"
        android:text="加载中..."
        android:textColor="@color/black"
        android:textSize="16sp" />
</RelativeLayout>