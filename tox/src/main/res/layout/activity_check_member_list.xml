<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <com.thinksky.ui.common.TitleBar
      android:id="@+id/title_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <com.thinksky.ui.common.PullToRefreshListView
      android:id="@+id/memberRecycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/title_bar"
      android:layout_marginBottom="@dimen/margin_large"
      />

  <LinearLayout
      android:id="@+id/operation_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@android:color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingBottom="@dimen/margin_small"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      android:paddingTop="@dimen/margin_small"
      android:visibility="gone"
      tools:visibility="visible"
      >

    <CheckBox
        android:id="@+id/check_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/activity_group_member_list_footer_check_all"
        style="@style/Widget.App.TextView.Medium.Primary"
        />
    <TextView
        android:id="@+id/btn_accept_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/bg_btn_red_border"
        android:paddingBottom="4dp"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="4dp"
        android:text="@string/activity_group_member_list_footer_btn_set_manager"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

  </LinearLayout>
</RelativeLayout>
