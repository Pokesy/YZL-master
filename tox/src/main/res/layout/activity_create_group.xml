<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <com.thinksky.ui.common.TitleBar
      android:id="@+id/title_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
  <RelativeLayout
      android:id="@+id/menu_logo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_logo"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />
    <TextView
        android:id="@+id/avatar_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/group_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toLeftOf="@id/avatar_arrow"
        android:src="@drawable/picture_1_no"
        />

  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/item_divider"
      />
  <RelativeLayout
      android:id="@+id/menu_group_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_name"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/item_divider"
      />

  <RelativeLayout
      android:id="@+id/menu_group_category"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_category"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />

    <TextView
        android:id="@+id/group_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/item_divider"
      />

  <RelativeLayout
      android:id="@+id/menu_group_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_type"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />

    <TextView
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/item_divider"
      />
  <RelativeLayout
      android:id="@+id/menu_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_description"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />
    <TextView
        android:id="@+id/description_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toLeftOf="@id/description_arrow"
        android:layout_toRightOf="@id/description_label"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/item_divider"
      />
  <RelativeLayout
      android:id="@+id/menu_notice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ProfileMenuContainer"
      >
    <TextView
        android:id="@+id/notice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_create_group_label_notice"
        style="@style/Widget.App.TextView.Large.Primary.ProfileMenu"
        />
    <TextView
        android:id="@+id/notice_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextView.Small.Secondary.ProfileDetailArrow"
        />
    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toLeftOf="@id/notice_arrow"
        android:layout_toRightOf="@id/notice_label"
        style="@style/Widget.App.TextView.Medium.Primary"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/btn_dissolution"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_xxlarge"
      android:background="@android:color/holo_red_dark"
      android:gravity="center"
      android:paddingBottom="@dimen/margin_small"
      android:paddingTop="@dimen/margin_small"
      android:text="@string/activity_create_group_btn_dissolution"
      android:visibility="gone"
      tools:visibility="visible"
      style="@style/Widget.App.TextView.Large.White"
      />

</LinearLayout>