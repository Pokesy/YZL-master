<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="3dp"
    >

  <RelativeLayout
      android:id="@+id/root_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/default_layout_bg_selector"
      >

    <!--&lt;!&ndash;开头分割线&ndash;&gt;-->
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:background="#d9d9d9" />-->

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_layout_bg_selector"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        >

      <!--标题部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="12dp"
          android:paddingTop="12dp"
          >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_dark_black"
            android:textSize="17sp"
            tools:text="aaaaaaaaaaaaaaabbbbbbbbbbbbb"
            />
      </RelativeLayout>
      <!--内容部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:textColor="@color/font_color_light_black"
            android:textSize="13sp"
            tools:text="neironnnnnnnnnnnnnnnnnnnnnnnnnnmmmmmmmmmmmmmmmmmmmmmmmmm"
            />
      </RelativeLayout>

      <!--状态部分-->
      <RelativeLayout
          android:id="@+id/img_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <!--图片部分-->
        <LinearLayout
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <ImageView
              android:id="@+id/iv_1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_weight="1"
              android:scaleType="centerCrop"
              android:visibility="visible"
              />

          <ImageView
              android:id="@+id/iv_2"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_weight="1"
              android:scaleType="centerCrop"
              android:visibility="visible"
              />

          <ImageView
              android:id="@+id/iv_3"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_weight="1"
              android:scaleType="centerCrop"
              android:visibility="visible"
              />
        </LinearLayout>
      </RelativeLayout>


      <!--评论部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="12dp"
          android:paddingLeft="5dp"
          android:paddingTop="12dp"
          android:visibility="gone"
          >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textColor="#666666"
              android:textSize="15sp"
              tools:text="ne"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textColor="#666666"
              android:textSize="15sp"
              tools:text="nei"
              />
        </LinearLayout>
      </RelativeLayout>

      <!--用户部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <ImageView
              android:id="@+id/user_logo"
              android:layout_width="20dp"
              android:layout_height="20dp"
              />

          <TextView
              android:id="@+id/nickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:drawablePadding="5dp"
              android:text="犀利的用户名"
              android:textColor="#999999"
              android:textSize="12sp"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >
          <!--右边-->
          <TextView
              android:id="@+id/supportCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:drawableLeft="@drawable/weidianzan"
              android:drawablePadding="5dp"
              android:text="21"
              android:textColor="#999999"
              android:textSize="13sp"
              />
          <!--右边-->
          <TextView
              android:id="@+id/reply_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:drawableLeft="@drawable/huisepinglun"
              android:drawablePadding="5dp"
              android:text="444"
              android:textColor="#999999"
              android:textSize="13sp"
              />
        </LinearLayout>

      </RelativeLayout>
    </LinearLayout>
    <!--结尾分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d9d9d9"
        />
  </RelativeLayout>

</FrameLayout>
