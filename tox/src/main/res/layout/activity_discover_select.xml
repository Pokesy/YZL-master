<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
  <!--页头-->
  <RelativeLayout
      android:id="@+id/discover_select_top"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/head_border"
      android:paddingBottom="0dp"
      android:paddingTop="0dp"
      >
    <ImageView
        android:id="@+id/back_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/icon_title_bar_back"
        />


    <TextView
        android:id="@+id/CheckIn_TimeNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/title_discover_select"
        android:textColor="@color/tab"
        android:textSize="17sp"
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
      android:text="请选择您的身份："
      style="@style/Widget.App.TextView.XXLarge.Primary"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      >

    <TextView
        android:id="@+id/button_friend"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="left|bottom"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:background="@drawable/bg_dis_select"
        android:drawableLeft="@drawable/friend_progress"
        android:gravity="center"
        android:padding="10dp"
        android:text="鱼友"
        style="@style/Widget.App.TextView.Large.Secondary"
        />

    <TextView
        android:id="@+id/button_fishing"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_dis_select"
        android:drawableLeft="@drawable/fish_progress"
        android:gravity="center"
        android:padding="10dp"
        android:text="渔场"
        style="@style/Widget.App.TextView.Large.Secondary"
        />
  </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/margin_large"
      android:text="一个账号同一时间只能向大家展示一种身份，点击编辑可以重新选择展示的身份。"
      style="@style/Widget.App.TextView.Small.Secondary"
      />

</LinearLayout>