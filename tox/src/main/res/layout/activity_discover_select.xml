<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
  <!--页头-->
  <RelativeLayout
      android:id="@+id/discover_select_top"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/head_border"
      android:paddingBottom="0dp"
      android:paddingTop="0dp"
      >
    <ImageView
        android:id="@+id/back_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/iconfont_fanhui"
        />


    <TextView
        android:id="@+id/CheckIn_TimeNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/title_discover_select"
        android:textColor="@color/tab"
        android:textSize="17sp"
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="30dp"
      android:text="请选择您的身份："
      android:textSize="18sp"
      />


  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      >

    <TextView
        android:id="@+id/button_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="35dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/bg_dis_select"
        android:drawableLeft="@drawable/friend_progress"
        android:text="鱼友"
        />

    <TextView
        android:id="@+id/button_fishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/bg_dis_select"
        android:drawableLeft="@drawable/fish_progress"
        android:text="渔场"
        />
  </FrameLayout>

</LinearLayout>