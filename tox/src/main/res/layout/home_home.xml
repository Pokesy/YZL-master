<?xml version="1.0" encoding="utf-8"?>
<com.thinksky.fragment.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:paddingTop="2dp"
    android:focusableInTouchMode="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- 主题图片 -->
        <com.thinksky.fragment.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />
        <!--开头分割线-->
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="@color/default_divider_color" />-->
        <LinearLayout
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/rb_rmht"
                style="@style/main_wd"
                android:checked="false"
                android:drawableTop="@drawable/iconfontremenwenda"
                android:text="@string/remenhuati" />

            <TextView
                android:id="@+id/rb_zgxs"
                style="@style/main_wd"
                android:drawableTop="@drawable/iconfontzuigaoxuanshang"
                android:text="@string/zuigaoxuanshang" />

            <TextView
                android:id="@+id/rb_wdtw"
                style="@style/main_wd"
                android:drawableTop="@drawable/iconfontwodetiwen"
                android:text="@string/wodetiwen" />

            <TextView
                android:id="@+id/rb_yjj"
                style="@style/main_wd"
                android:checked="false"
                android:drawableTop="@drawable/iconfontyijiejue"
                android:text="@string/yijiejue" />

        </LinearLayout>
        <!--头部信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                android:text="专家课程"

                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/zj_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:text="显示全部   >"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="专家教你更多精彩"
            android:textColor="#666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/bofangshipin"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:scaleType="centerCrop">

                <ImageView
                    android:id="@+id/issue_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/bofang" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/time"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="12:20" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/browse"
                    android:drawablePadding="10dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    tools:text="235" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/zixun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                android:text="资讯"

                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/zx_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/zixun"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:text="显示全部  >"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_zx"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.thinksky.rsen.view.RGridView
                android:id="@+id/Zx_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/remenxiaozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                android:text="热门小组"

                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rm_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/remenxiaozu"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:text="显示全部  >"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.thinksky.rsen.view.RGridView
                android:id="@+id/Rm_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="2" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/remenhuati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                android:text="热门话题"

                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ht_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/remenhuati"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:text="显示全部  >"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Emht_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</com.thinksky.fragment.MyScrollview>