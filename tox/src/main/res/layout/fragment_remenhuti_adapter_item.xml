<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#fff"
             android:descendantFocusability="blocksDescendants"
             android:paddingBottom="3dp"
             android:paddingTop="3dp">

    <RelativeLayout
        android:id="@+id/root_layout"
        android:background="@drawable/default_layout_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--开头分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/default_divider_color"/>

        <LinearLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_layout_bg_selector"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">

            <!--标题部分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    tools:text="aaaaaaaaaaaaaaabbbbbbbbbbbbb"/>
            </RelativeLayout>


            <!--状态部分, 暂时不使用-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <!--左边状态图标信息-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/best_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="#ee0000"
                        android:text="求助中"
                        android:textColor="#FFFFFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/rating_small_empty"
                        android:drawablePadding="5dp"
                        android:text="20"
                        android:textColor="#999999"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/rating_small_empty"
                        android:drawablePadding="5dp"
                        android:text="鱼"
                        android:textColor="#999999"/>

                </LinearLayout>

                <!--右边状态信息-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/creat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23秒前"
                        android:textColor="#999999"/>
                </LinearLayout>
            </RelativeLayout>


            <!--内容部分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    tools:text="neironnnnnnnnnnnnnnnnnnnnnnnnnnmmmmmmmmmmmmmmmmmmmmmmmmm"/>
            </RelativeLayout>


            <!--用户部分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="犀利的用户名"
                        android:textColor="#999999"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <!--右边-->
                    <TextView
                        android:id="@+id/supportCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/dianzan"
                        android:drawablePadding="5dp"
                        android:text="21"
                        android:textColor="#00faff"
                        android:textSize="13sp"/>
                    <!--右边-->
                    <TextView
                        android:id="@+id/is_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_comment_number"
                        android:drawablePadding="5dp"
                        android:text="444"
                        android:layout_marginRight="10dp"
                        android:textColor="#00faff"
                        android:textSize="13sp"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <!--结尾分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/default_divider_color"/>
    </RelativeLayout>

</FrameLayout>
