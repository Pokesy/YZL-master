<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/CommentArea"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="10"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        >

      <com.thinksky.redefine.CircleImageView
          android:id="@+id/Detail_Item_UserHead"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:src="@drawable/side_user_avatar"
          tools:border_color="@color/light"
          tools:border_width="1dp"
          />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="8"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="8"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/Detail_Item_UserName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"


              android:paddingBottom="6dp"
              android:singleLine="true"
              android:text="我的用户名"
              android:textSize="14sp"
              />


        </LinearLayout>
        <TextView
            android:id="@+id/Detail_com_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2014.7.2"
            android:textSize="13dp"

            />
        <TextView
            android:id="@+id/Detail_Item_Num"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="15"
            android:textSize="14sp"
            android:visibility="gone"
            />
      </LinearLayout>


      <com.thinksky.redefine.FaceTextView
          android:id="@+id/Detail_Item_Value"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:paddingRight="10dp"
          android:text="我的评论详情我的评论详情我的评论详情我的评论详情我的评论详情我的评论详情"
          android:textSize="16sp"
          />


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@drawable/jbline"
      >

  </LinearLayout>
</LinearLayout>