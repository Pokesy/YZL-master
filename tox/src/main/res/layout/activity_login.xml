<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:id="@+id/login_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/yuzhilelogo_login" />

            <com.rengwuxian.materialedittext.MaterialEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="手机号码"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:baseColor="#ffffffff"
                app:bottomTextSize="17sp"
                app:floatingLabel="normal"
                app:maxCharacters="16"
                app:singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:baseColor="#ffffffff"
                app:floatingLabel="normal"
                app:maxCharacters="30"
                app:singleLineEllipsis="true" />

            <EditText
                android:id="@+id/Ledit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape"
                android:clickable="false"
                android:drawablePadding="10dp"
                android:hint="手机号码"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/Ledit_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:drawablePadding="10dp"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />


            <RelativeLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/shape_login">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="登录"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
               >

                <com.dd.CircularProgressButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_login"
                    android:textSize="21sp"
                    app:cpb_textComplete="@string/Complete"
                    app:cpb_textError="@string/Error"
                    app:cpb_textIdle="登录" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/login_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:text="先去逛逛"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <!--右边-->

                <!--右边-->
                <TextView
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingBottom="20dp"
                    android:text="忘记密码？"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/tab"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="注册鱼知乐账户"
                android:textColor="@color/tab" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"


                android:text=""
                android:textColor="@color/head"
                android:textSize="17sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_huo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_register"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/security_row_line"
            android:drawableRight="@drawable/security_row_line"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="or"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_xia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_huo"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="已绑定糗百账号?也可以用以下帐号登陆"
            android:textColor="#9E8C7B"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/button_weibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_xia"
            android:layout_marginTop="10dp"
            android:background="@drawable/security_row_sina_bg"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/security_row_sina"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="     微博帐号登陆"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buton_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_weibo"
            android:layout_marginTop="10dp"
            android:background="@drawable/security_row_qq_bg"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/security_row_qq"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="     QQ帐号登陆"
                android:textColor="#ffffff" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>