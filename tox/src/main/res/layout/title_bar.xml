<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_tl"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    >
  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <FrameLayout
      android:id="@+id/title_bg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/head"
      />
  <ImageView
      android:id="@+id/left_img_menu"
      android:layout_width="@dimen/title_bar_menu_icon_size"
      android:layout_height="@dimen/title_bar_menu_icon_size"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:scaleType="center"
      android:src="@drawable/icon_title_bar_back"
      android:visibility="gone"
      tools:visibility="visible"
      />
  <ImageView
      android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:src="@drawable/logo"
      android:visibility="gone"
      tools:visibility="gone"
      />
  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:textColor="@android:color/white"
      android:textSize="@dimen/font_size_xxlarge"
      android:maxLength="10"
      android:ellipsize="end"
      android:visibility="gone"
      tools:text="鱼知乐"
      />
  <ImageView
      android:id="@+id/search"
      android:layout_width="@dimen/title_bar_menu_icon_size"
      android:layout_height="@dimen/title_bar_menu_icon_size"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:scaleType="center"
      android:src="@drawable/search"
      android:visibility="gone"
      tools:visibility="visible"
      />
  <TextView
      android:id="@+id/text_btn_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/title_bar_menu_padding"
      android:paddingBottom="@dimen/title_bar_menu_padding"
      android:paddingTop="@dimen/title_bar_menu_padding"
      android:textColor="@android:color/white"
      android:textSize="@dimen/font_size_medium"
      android:visibility="gone"
      tools:text="写动态"
      tools:visibility="visible"
      />
</RelativeLayout>