<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <!--开头分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/bg_color_main"
        />

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_layout_bg_selector"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        >

      <!--标题部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="12dp"
          android:paddingTop="9dp"
          >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color_dark_black"
            android:textSize="@dimen/font_size_large"
            tools:text="aaaaaaaaaaaaaaabbbbbbbbbbbbb"
            />
      </RelativeLayout>


      <!--状态部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <!--左边状态图标信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/best_answer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:background="@drawable/bg_question_status_selector"
              android:textColor="@color/text_question_status_selector"
              android:textSize="@dimen/font_size_medium"
              tools:text="求助中"
              />

          <TextView
              android:id="@+id/score"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:drawableLeft="@drawable/iconfonticonfontqian"
              android:drawablePadding="5dp"
              android:textColor="@color/font_color_dark_gray"
              android:textSize="@dimen/font_size_medium"
              tools:text="20"
              />

          <TextView
              android:id="@+id/category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/iconfontbiaoqian1"
              android:drawablePadding="5dp"
              android:textColor="@color/font_color_dark_gray"
              android:textSize="@dimen/font_size_medium"
              tools:text="鱼"
              />

        </LinearLayout>

        <!--右边状态信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/creat_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/font_color_dark_gray"
              android:textSize="@dimen/font_size_small"
              tools:text="23秒前"
              />
        </LinearLayout>
      </RelativeLayout>


      <TextView
          android:id="@+id/content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_marginTop="12dp"
          android:ellipsize="end"
          android:lineSpacingMultiplier="1.5"
          android:maxLines="2"
          android:textColor="@color/font_color_light_black"
          android:textSize="@dimen/font_size_primary"
          tools:text="时光一去永不回，往事只能回味，忆童年时竹马青梅，两小无猜日夜相随"
          />

      <!--图片部分-->
      <!--状态部分-->
      <RelativeLayout
          android:id="@+id/img_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <LinearLayout
            android:id="@+id/images"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="9">

          <ImageView
              android:id="@+id/iv_1"
              android:layout_width="0dp"
              android:layout_height="130dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="5dp"
              android:layout_weight="3"
              android:scaleType="centerCrop"
              android:src="@drawable/friends_sends_pictures_no"
              android:visibility="visible" />

          <ImageView
              android:id="@+id/iv_2"
              android:scaleType="centerCrop"
              android:layout_width="0dp"
              android:layout_height="130dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="5dp"
              android:layout_weight="3"
              android:src="@drawable/friends_sends_pictures_no"
              android:visibility="visible" />

          <ImageView
              android:id="@+id/iv_3"
              android:layout_width="0dp"
              android:layout_height="130dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:scaleType="centerCrop"
              android:layout_weight="3"
              android:src="@drawable/friends_sends_pictures_no"
              android:visibility="visible" />
        </LinearLayout>
      </RelativeLayout>

      <!--用户部分-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <ImageView
              android:id="@+id/logo"
              android:layout_width="20dp"
              android:layout_height="20dp"
              />

          <TextView
              android:id="@+id/nickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:textColor="@color/font_color_dark_gray"
              android:textSize="@dimen/font_size_medium"
              tools:text="犀利的用户名"
              />
        </LinearLayout>

        <!--右边-->
        <TextView
            android:id="@+id/answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/iconfontfaburenwu"
            android:drawablePadding="5dp"
            android:textColor="@color/font_color_blue"
            android:textSize="@dimen/font_size_medium"
            tools:text="21"
            />
      </RelativeLayout>
    </LinearLayout>
    <!--结尾分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color_main"
        />
  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider"
      android:background="@color/bg_color_divider_dark"
      />

</RelativeLayout>
