<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_zx"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal">


    <!-- 文字信息区域-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:text="测试数据"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/news_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="测试数据"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/news_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="测试数据"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/is_overdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="测试数据"
            android:textColor="@color/group_less" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/news_description"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_visibility" />

            <TextView
                android:id="@+id/news_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试数据" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 图片logo区域-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp">

        <ImageView
            android:id="@+id/news_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>
</LinearLayout>