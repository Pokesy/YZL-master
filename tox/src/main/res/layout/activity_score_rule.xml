            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:text="+10"
            style="@style/Widget.App.TextView.Large.RedDark"
            />

        <TextView
            android:id="@+id/score_login_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:layout_toLeftOf="@id/score_login"
            tools:text="@string/activity_score_rule_score_max"
            style="@style/Widget.App.TextView.Small.Secondary"
            />
      </RelativeLayout>
      <View
