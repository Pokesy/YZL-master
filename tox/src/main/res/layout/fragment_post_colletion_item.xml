<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_small"
    >
  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="我家的鱼怎么了啊?今早吓我一跳"
      style="@style/Widget.App.TextView.Medium.Primary"
      />
  <TextView
      android:id="@+id/content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      android:ellipsize="end"
      android:singleLine="true"
      tools:text="很多渔友在投喂饵料的过程中发现,经常不爱吃食,怎"
      style="@style/Widget.App.TextView.Medium.Secondary"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      android:gravity="right|center_vertical"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_medium"
        android:drawableLeft="@drawable/icon_comment"
        android:gravity="center"
        tools:text="82"
        style="@style/Widget.App.TextView.Medium.Secondary"
        />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_like"
        android:gravity="center"
        tools:text="11"
        style="@style/Widget.App.TextView.Medium.Secondary"
        />

  </LinearLayout>

</LinearLayout>