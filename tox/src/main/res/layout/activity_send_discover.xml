<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.thinksky.tox.DiscoverSendActivity"
    >
  //页头

  <RelativeLayout
      android:id="@+id/SendPostheader"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentTop="true"
      android:background="@drawable/head_border"
      android:paddingBottom="0dp"
      android:paddingTop="0dp"
      >

    <RelativeLayout

        android:id="@+id/Post_send_Back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"

          android:padding="10dp"
          android:src="@drawable/arrow_left"
          />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/head"
        android:gravity="center_vertical|center_horizontal"

        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:background="@color/head"
          android:gravity="center_vertical|center_horizontal"
          android:singleLine="true"
          android:text="描述你的位置"
          android:textColor="@color/tab"
          android:textSize="17sp"
          />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/post_send"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/head"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        >

      <com.dd.CircularProgressButton
          android:layout_width="50dp"
          android:layout_height="40dp"
          android:background="#51B8DE"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:visibility="gone"
          app:cpb_textIdle="发布"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"

          android:layout_centerVertical="true"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:text="确定"
          android:textColor="@color/tab"
          android:visibility="visible"
          />
    </RelativeLayout>
  </RelativeLayout>

  //页脚

  <RelativeLayout
      android:id="@+id/Post_footer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/message"
      android:background="#ffffff"
      android:paddingLeft="10dp"
      android:visibility="visible"
      >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/attachBtns"
        android:background="#DFE3E4"
        />
    <!--页脚btn区-->
    <LinearLayout
        android:id="@+id/attachBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:weightSum="10"
        >

      <TextView
          android:id="@+id/textView11"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="10dp"
          android:paddingTop="10dp"
          android:text="上传照片让别人来一睹风采吧(最多3张)"
          style="@style/Widget.App.TextView.XLarge.Primary"
          android:layout_marginLeft="10dp"
          />

      <LinearLayout
          android:id="@+id/Post_send_attachBtn"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:padding="10dp"
          >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_add_photo"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/Post_send_faceBtn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:gravity="center"
          android:visibility="gone"
          >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/smile"
            />
      </LinearLayout>
    </LinearLayout>


    <!--页脚btn对应的控制区-->
    <LinearLayout
        android:id="@+id/Post_attach_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/attachBtns"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:weightSum="10"
        >


      <LinearLayout
          android:id="@+id/Post_send_photo"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_marginLeft="15dp"
          android:background="@drawable/borderradius_postsend"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:padding="5dp"
          >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/photo"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:gravity="center"
            android:text="图片"
            android:textColor="#455562"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/Post_send_takePhoto"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_marginLeft="15dp"
          android:background="@drawable/borderradius_postsend"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:padding="5dp"
          android:visibility="gone"
          >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/camera_send_post"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#455562"
            />
      </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Post_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Post_attach_layout"
        android:background="#DFE3E4"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10"
        >

      <org.kymjs.aframe.ui.widget.HorizontalListView
          android:id="@+id/HorizontalListView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingBottom="15dp"
          android:paddingTop="15dp"
          >

      </org.kymjs.aframe.ui.widget.HorizontalListView>

      <TextView
          android:id="@+id/photo_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|bottom"
          android:layout_marginBottom="10dp"
          android:text="已选0张，还剩3张可选"
          />
    </FrameLayout>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/SendPostheader"
      android:paddingLeft="10dp"
      >

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <LinearLayout
          android:id="@+id/pop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"

          android:gravity="center_horizontal"
          android:orientation="vertical"

          >


        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >

          <ImageView
              android:id="@+id/iv_round"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:src="@drawable/yuyou_1"
              />

          <EditText
              android:id="@+id/Post_send_titleEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape"
              android:hint="请输入渔场名字"
              android:paddingBottom="15dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="15dp"
              style="@style/Widget.App.TextView.Large.Primary"
              />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color_divider"
            />

        <RelativeLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >

          <ImageView
              android:id="@+id/iv_user"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:src="@drawable/near"
              />

          <TextView
              android:id="@+id/dizhi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_toRightOf="@id/iv_user"
              android:hint="我的位置"
              android:paddingBottom="15dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="15dp"
              style="@style/Widget.App.TextView.Large.Primary"
              android:layout_centerVertical="true"
              />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:gravity="end"
              android:src="@drawable/tiaozhuan"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="25dp"
              />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color_divider"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >

          <ImageView android:id="@+id/icon_contact"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:src="@drawable/weixin"
              />

          <EditText
              android:id="@+id/Post_send_contentEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape"
              android:hint="请输入微信号"
              android:paddingBottom="15dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="15dp"
              style="@style/Widget.App.TextView.Large.Primary"
              />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#e4e4e4"
            />

        <RelativeLayout
            android:id="@+id/yincang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/tv_yc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="25dp"
              android:paddingBottom="15dp"
              android:paddingTop="15dp"
              android:text="隐藏我的位置"
              style="@style/Widget.App.TextView.Large.Primary"
              />


          <ImageView
              android:id="@+id/mTogBtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:src="@drawable/toggle_btn"
              android:checked="false"
              android:layout_marginRight="20dp"
              />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#e4e4e4"
            />
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>

</RelativeLayout>

