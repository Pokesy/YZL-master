<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--页头-->
    <RelativeLayout
        android:id="@+id/group_post_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_border"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/back_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="标题"
            android:textColor="@color/tab"
            android:textSize="18sp" />


    </RelativeLayout>

    <!--body-->
    <ScrollView
        android:id="@+id/post_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/group_post_top">


        <LinearLayout
            android:id="@+id/body_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_layout_bg_selector"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp">

                <!--标题部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        tools:text="aaaaaaaaaaaaaaabbbbbbbbbbbbb" />
                </RelativeLayout>


                <!--状态部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--左边状态图标信息-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/best_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="#ee0000"
                            android:text="求助中"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/iconfonticonfontqian"
                            android:drawablePadding="5dp"
                            android:text="20"
                            android:textColor="#999999" />


                    </LinearLayout>

                    <!--右边状态信息-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/creat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23秒前"
                            android:textColor="#999999" />
                    </LinearLayout>
                </RelativeLayout>


                <!--内容部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        tools:text="neironnnnnnnnnnnnnnnnnnnnnnnnnnmmmmmmmmmmmmmmmmmmmmmmmmm" />
                </RelativeLayout>


                <!--用户部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/iconfontbiaoqian1"
                        android:drawablePadding="5dp"
                        android:text="龙鱼"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                    <!--&lt;!&ndash;右边&ndash;&gt;-->
                    <!--<TextView-->
                    <!--android:id="@+id/answer_num"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:drawableLeft="@drawable/rating_small_empty"-->
                    <!--android:drawablePadding="5dp"-->
                    <!--android:text="21"-->
                    <!--android:textColor="#00faff"-->
                    <!--android:textSize="13sp" />-->
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/huida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:paddingLeft="17dp"
                android:paddingTop="27dp"
                android:text="23条回答"
                android:textColor="#999999"
                android:textSize="12sp" />
            <!--结尾分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_alignParentBottom="true"
                android:background="@color/default_divider_color" />
            <!--内容列表-->
            <com.thinksky.rsen.view.RInnerListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:paddingTop="12dp" />
        </LinearLayout>


    </ScrollView>

    <!--评论发表box-->

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/reply_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/btn_huida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="点击开始回答" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_box"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/forum_edit_backgroud"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.1"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/plus" />
            </LinearLayout>

            <EditText
                android:id="@+id/reply_editText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:background="@drawable/edittext_background"
                android:hint="回复楼主" />

            <TextView
                android:id="@+id/sendPostButn"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="发表"
                android:textColor="#A9ADB0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>