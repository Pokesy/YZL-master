<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_main"
    android:orientation="vertical">

    <!--页头-->
    <RelativeLayout
        android:id="@+id/group_post_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_border"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/back_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="问答"
            android:textColor="@color/tab"
            android:textSize="18sp" />


    </RelativeLayout>

    <!--body-->
    <ScrollView
        android:id="@+id/post_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/group_post_top">


        <LinearLayout
            android:id="@+id/body_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp">

                <!--标题部分-->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_dark_black"
                    android:textSize="@dimen/font_size_large"
                    tools:text="问:娱乐悦乐项目组，大酒店基督教在哪里" />


                <!--状态部分-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <!--左边状态图标信息-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/best_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_question_status_selector"
                            android:text="求助中"
                            android:textColor="@color/text_question_status_selector"
                            android:textSize="@dimen/font_size_medium" />

                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/iconfonticonfontqian"
                            android:drawablePadding="3dp"
                            android:textColor="@color/font_color_dark_gray"
                            android:textSize="@dimen/font_size_medium"
                            tools:text="20" />
                    </LinearLayout>

                    <!--右边状态信息-->

                    <TextView
                        android:id="@+id/creat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="23秒前"
                        android:textColor="@color/font_color_dark_gray" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/font_color_light_black"
                    android:textSize="@dimen/font_size_big"
                    tools:text="neironnnnnnnnnnnnnnnnnnnnnnnnnnmmmmmmmmmmmmmmmmmmmmmmmmm" />

                <!--状态部分-->
                <RelativeLayout
                    android:id="@+id/img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="170dp">
                    <!--图片部分-->
                    <LinearLayout
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:visibility="invisible" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconfontbiaoqian1"
                    android:drawablePadding="5dp"
                    android:text="龙鱼"
                    android:textColor="@color/font_color_dark_gray"
                    android:textSize="@dimen/font_size_medium" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/bg_color_divider_dark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginTop="5dp"
                android:background="@color/bg_color_divider_dark" />

            <TextView
                android:id="@+id/huida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/white"
                android:paddingBottom="8dp"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:textColor="@color/font_color_blue"
                android:textSize="@dimen/font_size_medium"
                tools:text="23条回答" />

            <TextView
                android:id="@+id/wutu"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nocomment"/>
            <!--内容列表-->
            <com.thinksky.rsen.view.RInnerListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp"
                android:listSelector="@android:color/transparent" />

        </LinearLayout>


    </ScrollView>

    <!--评论发表box-->

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/reply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_huida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_btn_blue"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="点击开始回答"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_box"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/forum_edit_backgroud"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.1"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/plus" />
            </LinearLayout>

            <EditText
                android:id="@+id/reply_editText"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:background="@drawable/edittext_background"
                android:hint="回复楼主"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/sendPostButn"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="发表"
                android:textColor="#A9ADB0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>