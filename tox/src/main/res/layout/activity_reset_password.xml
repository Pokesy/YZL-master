<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/loginTop"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/head_border"
      android:orientation="horizontal"
      >


    <RelativeLayout

        android:id="@+id/registClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        >

      <ImageView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:src="@drawable/arrow_left"
          />
    </RelativeLayout>

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="重置密码"
        android:textColor="@color/tab"
        android:textSize="18sp"
        />

  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/margin_xxlarge"
      >

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:background="@drawable/button_edit_transparent"
          android:drawablePadding="10dp"
          android:hint="请输入手机号"
          android:padding="@dimen/margin_small"
          style="@style/Widget.App.TextView.Large.Primary"
          />

      <EditText
          android:id="@+id/new_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="@dimen/margin_primary"
          android:background="@drawable/button_edit_transparent"
          android:drawablePadding="10dp"
          android:hint="请输入新密码"
          android:inputType="textPassword"
          android:maxLength="16"
          android:padding="@dimen/margin_small"
          style="@style/Widget.App.TextView.Large.Primary"
          />

      <EditText
          android:id="@+id/new_agin_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_primary"
          android:background="@drawable/button_edit_transparent"
          android:drawablePadding="10dp"
          android:hint="请再次输入新密码"
          android:inputType="textPassword"
          android:maxLength="30"
          android:padding="@dimen/margin_small"
          style="@style/Widget.App.TextView.Large.Primary"
          />

      <EditText
          android:id="@+id/role"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="@dimen/margin_primary"
          android:background="@drawable/button_edit_transparent"
          android:drawablePadding="10dp"
          android:enabled="false"
          android:maxLength="16"
          android:padding="@dimen/margin_small"
          android:visibility="gone"
          tools:visibility="gone"
          style="@style/Widget.App.TextView.Large.Primary"
          />

      <LinearLayout
          android:id="@+id/checkId"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_primary"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <EditText
            android:id="@+id/verifyId"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="2"
            android:background="@drawable/button_edit_transparent"
            android:hint="验证码"
            android:maxLength="16"
            android:padding="@dimen/margin_small"
            style="@style/Widget.App.TextView.Large.Primary"
            />

        <TextView
            android:id="@+id/sendVerify"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_round_corner_yellow"
            android:padding="@dimen/margin_small"
            android:text="获取验证码"
            style="@style/Widget.App.TextView.Large.Primary"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/tv_qd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_xxlarge"
          android:background="@drawable/bg_round_corner_blue"
          android:gravity="center"
          android:padding="@dimen/margin_small"
          android:text="确 定"
          style="@style/Widget.App.TextView.XLarge.White"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          ></LinearLayout>

      <RadioGroup
          android:id="@+id/radioGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="性别"
          android:orientation="horizontal"
          >

      </RadioGroup>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="15dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="1dp"
          ></LinearLayout>

    </LinearLayout>
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:paddingBottom="5dp"
      android:paddingTop="15dp"
      android:visibility="gone"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爪机注册无需注册码"
        android:textColor="#696969"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:visibility="gone"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每只爪机仅能注册一个帐号，请呵护对待"
        android:textColor="#696969"
        />
  </LinearLayout>

</LinearLayout>